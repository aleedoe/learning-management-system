{
    "watch": [
        "src"
    ],
    "ext": "ts,json",
    "ignore": [
        "node_modules",
        "dist",
        "logs",
        "*.spec.ts",
        "*.test.ts"
    ],
    "exec": "ts-node --transpile-only src/server.ts",
    "delay": "500",
    "env": {
        "NODE_ENV": "development"
    }
}